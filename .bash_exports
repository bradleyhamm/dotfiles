export PATH=~/bin:$PATH

# Make vim the default editor.
export EDITOR='vim';

# Increase Bash history size.
export HISTSIZE='77777';
export HISTFILESIZE="${HISTSIZE}";

# Omit duplicates and commands that begin with a space from history.
export HISTCONTROL='ignoreboth';

# Less Colors for Man Pages
export LESS_TERMCAP_mb=$(tput bold; tput setaf 2) # start blink (GREEN)
export LESS_TERMCAP_md=$(tput bold; tput setaf 5) # start bold (PURPLE)
export LESS_TERMCAP_me=$(tput sgr0) # turn off bold, blink and underline
export LESS_TERMCAP_so=$(tput bold; tput setab 11; tput setaf 0) # start standout (reverse video) (PURPLE ON YELLOW)
export LESS_TERMCAP_se=$(tput rmso; tput sgr0) # stop standout
export LESS_TERMCAP_us=$(tput smul; tput bold; tput setaf 6) # start underline (CYAN)
export LESS_TERMCAP_ue=$(tput rmul; tput sgr0) # stop underline
export LESS_TERMCAP_mr=$(tput rev)
export LESS_TERMCAP_mh=$(tput dim)
export LESS_TERMCAP_ZN=$(tput ssubm)
export LESS_TERMCAP_ZV=$(tput rsubm)
export LESS_TERMCAP_ZO=$(tput ssupm)
export LESS_TERMCAP_ZW=$(tput rsupm)

# Don't clear the screen after quitting a manual page.
export MANPAGER='less -X';
